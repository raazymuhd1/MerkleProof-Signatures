{
  "compilerOptions": {
    "target": "es2016",                             
    "rootDir": "./merkleTree",                                                                  
    "outDir": "./merkle-result",                                   
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                                      
    "noImplicitAny": true,                            
    "skipLibCheck": true,
    "moduleResolution": "nodenext" ,
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true                          
  }
}